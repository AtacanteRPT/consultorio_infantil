							<th>Nombre</th>
							<th>Paterno</th>
							<th>Materno</th>
		
							<th>FECHA</th>
							<th>HORA</th>
						</thead>
		
						<tbody>
							<% citas.forEach((item, i) => { %>
								<tr>
									
									<td>
										<%= ++i%>
									</td>
		
									<!-- <td>
										<%= item.id %>
									</td> -->
