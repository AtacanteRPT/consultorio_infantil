<div class="container">
	<br>
	<div class="card text-dark border-success mb-3" style="max-width: 100%">
			<div class="card-header border-success">Nuevo Paciente</div>
			<div class="card-body border-success">
			  <h5 class="card-title">Registrar Paciente</h5>
			  <p class="card-text">Llenar los datos con *</p>

			  <form method="POST" action="/persona/crear">
				<input type="text" name="rol" value="paciente" hidden>
				<div class="form-group row">
					<label  class="col-sm-2 col-form-label col-form-label-sm">Apellido Paterno</label>
					<div class="col-sm-6">
					<input type="text" name='paterno' class="form-control form-control-sm"  placeholder="paterno">
					</div>
				</div>
				<div class="form-group row">
						<label  class="col-sm-2 col-form-label col-form-label-sm">Apellido Materno</label>
						<div class="col-sm-6">
						<input type="text" name="materno" class="form-control form-control-sm"  placeholder="materno">
						</div>
				</div>
				<div class="form-group row">
						<label  class="col-sm-2 col-form-label col-form-label-sm">Nombres</label>
						<div class="col-sm-6">
						<input type="text" name="nombre" class="form-control form-control-sm"  placeholder="nombres">
						</div>
				</div>
				<div class="form-group row">
						<label  class="col-sm-2 col-form-label col-form-label-sm">Cedula</label>
						<div class="col-sm-6">
						<input type="text" name="cedula" class="form-control form-control-sm"  placeholder="ci">
						</div>
				</div>
				<div class="form-group row">
						<label  class="col-sm-2 col-form-label col-form-label-sm">Fecha Nacimiento</label>
						<div class="col-sm-6">
						<input type="date" name="fechaNacimiento" class="form-control form-control-sm"  placeholder="">
						</div>
				</div>
		
				<button type="submit" class="btn btn-raised btn-primary">ENVIAR</button>
		
			</form>
			</div>
		  </div>
